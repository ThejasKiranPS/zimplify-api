generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())

  integrations Integrations[]
}

model Integrations {
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.Uuid

  platform String // enums/IntegrationsPlatform

  config Json

  @@unique([userId, platform])
}

model Project {
  id           String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name         String
  source       String
  buildCommand String
  buildDir     String
  rootDir      String

  status String

  subDomain   String
  template    String
  containerId String?

  env String // TODO: store as JSON?

  createdAt DateTime @default(now())
}
