generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name          String
  source        String
  buildCommand  String
  buildDir      String
  rootDir       String

  status String

  subDomain String
  template String

  createdAt DateTime @default(now())
}
